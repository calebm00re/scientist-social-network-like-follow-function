# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

#Login
POST     /login                      controllers.UserController.authenticate()

# Add User  {"name":name, "password":password}
POST    /signup                      controllers.UserController.registerNew()

#Get User
GET     /users                        controllers.UserController.getUsers

#Get User
POST     /users/:id                       controllers.UserController.getUser(id: Long)

#Get all documents
POST    /documents                    controllers.DocumentController.getDocuments

#add document
POST    /addDocument                    controllers.DocumentController.addDocument

#Get document by document_id
POST     /documents/:document_id         controllers.DocumentController.getDocument(document_id: Long)

#Get all likes
POST    /likes                        controllers.LikesController.getLikes
#Add Like
POST   /addLike/:document_id          controllers.LikesController.addLike(document_id: Long)
#Unlike
POST    /unlike/:document_id          controllers.LikesController.unlike(document_id: Long)
#Get all likes by a user
POST     /likes/:user_id                 controllers.LikesController.getLikesbyId(user_id: Long)


#Get all likes
POST    /follows                        controllers.FollowsController.getFollows
#Add Like
POST   /addFollow/:document_id          controllers.FollowsController.addFollow(document_id: Long)
#Unlike
POST    /unfollow/:document_id          controllers.FollowsController.unfollow(document_id: Long)
#Get all likes by a user
POST     /follows/:user_id                 controllers.FollowsController.getFollowsbyId(user_id: Long)

#Get all notifications
POST    /notifications                        controllers.NotificationsController.getNotifications
#Add Like
POST   /addNotification/:document_id          controllers.NotificationsController.turnonNotifications(document_id: Long)
#Unlike
POST    /removeNotification/:document_id          controllers.NotificationsController.turnoffNotifications(document_id: Long)
#Get all notifications by a user
POST     /notifications/:user_id                 controllers.NotificationsController.getNotificationsbyId(user_id: Long)





